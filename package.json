{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "My personal website",
  "main": "index.html",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "npm run build:css && npm run build:html && npm run build:config",
    "build:css": "npm run build:css:prefix && npm run build:css:minify && npm run build:css:fonts",
    "build:css:prefix": "postcss src/css/main.css --dir dist/css/ --use autoprefixer --no-map",
    "build:css:minify": "csso dist/css/main.css --output dist/css/main.css",
    "build:css:fonts": "cp -R src/css/fonts dist/css/",
    "build:html": "npm run build:html:minify && npm run build:html:mark",
    "build:html:minify": "html-minifier --input-dir src --output-dir dist --collapse-whitespace --file-ext html",
    "build:html:mark": "hashmark --length 8 --rename --cwd dist/ {css,js}/main.{css,js} {dir}/main.{hash}{ext} | replaceinfiles --source dist/index.html --dest-pattern dist/index.html",
    "build:config": "cp src/robot.txt src/manifest.json src/favicon.ico dist/",
    "build:js": "npm run build:js:minify",
    "build:js:minify": "uglifyjs --compress --output dist/js/main.js -- src/js/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VictorCazanave/portfolio.git"
  },
  "author": "Victor Cazanave <victor.cazanave@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VictorCazanave/portfolio/issues"
  },
  "homepage": "https://github.com/VictorCazanave/portfolio#readme",
  "devDependencies": {
    "@songkick/replaceinfiles": "^1.1.6",
    "autoprefixer": "^8.6.5",
    "csso-cli": "^1.1.0",
    "hashmark": "^5.0.0",
    "html-minifier": "^3.5.21",
    "postcss": "^6.0.23",
    "postcss-cli": "^5.0.1",
    "replace": "^0.3.0",
    "rimraf": "^2.7.1",
    "uglify-js": "^3.8.0"
  }
}
